{
  "name": "asisten-ai-ma-malnu-kananga",
  "private": true,
  "version": "3.10.6",
  "description": "MA Malnu Kananga - Modern School Management System",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode production",
    "typecheck": "tsc --noEmit --project tsconfig.json && tsc --noEmit --project tsconfig.test.json",
    "preview": "vite preview",
    "deploy:backend": "wrangler deploy",
    "deploy:prod": "./scripts/deploy-production.sh",
    "dev:backend": "wrangler dev",
    "env:setup": "./scripts/setup-env.sh",
    "env:validate": "./scripts/validate-env.sh",
    "validate-config": "node scripts/validate-config.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 20",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:install": "playwright install",
    "test:all": "npm run test:run && npm run test:e2e",
    "prepare": "husky install",
    "security:scan": "npm audit && npx audit-ci --moderate",
    "secrets:scan": "detect-secrets scan --baseline .secrets.baseline",
    "oh-my-opencode": "tsx .opencode/oh-my-opencode.ts",
    "brocula:audit": "node scripts/brocula-audit.js"
  },
  "dependencies": {
    "@google/genai": "^1.37.0",
    "@heroicons/react": "^2.2.0",
    "@sentry/react": "^10.34.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "papaparse": "^5.5.3",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "remark-gfm": "^4.0.1",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/papaparse": "^5.5.2",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "audit-ci": "^7.1.0",
    "chrome-launcher": "^1.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.59.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "eslint --fix"
    ]
  },
  "lastUpdated": "2026-02-12"
}
