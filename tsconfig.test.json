{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/__tests__/**/*",
    "src/**/*.(test|spec).(ts|tsx)",
    "src/setupTests.ts",
    "src/test-globals.d.ts"
  ]
}